  <%= f.error_messages %>

  <p>
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </p>
  <p>
    <%= f.label :jerarquia_id %><br />
    <%= f.text_field :jerarquia_id %>
  </p>
